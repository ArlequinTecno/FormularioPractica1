<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FormularioPractica1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/aladin</item>
    </style>

    <style name="textViewTitle.h1">
        <item name="android:textSize">35dp</item>
    </style>
    <style name="textViewTitle.h2">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="textViewTitle.h3">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="textViewTitle.h4">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="textViewBody">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/amarante</item>
    </style>
    <style name="textViewBody.p1">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="textViewBody.p2">
        <item name="android:textSize">13dp</item>
    </style>

</resources>